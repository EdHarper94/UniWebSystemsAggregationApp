<?xml version="1.0" encoding="utf-8"?>
<!-- Inbox activity view -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inbox"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/inbox_inner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">
        <!-- Buttons bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/bannerGrey">
            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/home_button"
                android:src="@drawable/home_icon"
                android:background="@drawable/rounded_button" />
            <ImageButton
                android:id="@+id/create_email_button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/create_email_button"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/home_button"
                android:layout_toEndOf="@+id/home_button"
                android:src="@drawable/create_email_icon"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/actionGreen"/>
            <ImageButton
                android:id="@+id/refresh_button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/edit_button"
                android:layout_toLeftOf="@+id/edit_button"
                android:text="@string/refresh_button"
                android:src="@drawable/refresh_icon"
                android:background="@drawable/rounded_button"/>
            <ImageButton
                android:id="@+id/edit_button"
                android:layout_width="55dp"
                android:layout_height="55dp"                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/edit_button"
                android:src="@drawable/edit_icon"
                android:background="@drawable/rounded_button"/>
        </RelativeLayout>
        <!-- Email List -->
        <ListView
            android:id="@+id/email_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/edit_button"
            android:layout_weight="1">
        </ListView>
        <!-- Bottom button bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/check_all_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/check_all_button"
                android:src="@drawable/mark_all_icon"
                android:background="@drawable/rounded_button"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/mark_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/mark_button"
                android:layout_toRightOf="@+id/check_all_button"
                android:src="@drawable/read_icon"
                android:background="@drawable/rounded_button"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/delete_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/delete_icon"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@android:color/holo_red_dark"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>