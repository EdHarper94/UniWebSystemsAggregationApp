<?xml version="1.0" encoding="utf-8"?>
<!-- Timetable scraper layout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timetable_scraper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- Buttons Bar -->
    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:src="@drawable/home_icon"
        android:background="@drawable/rounded_button"
        android:layout_margin="10dp"
        android:text="@string/home_button" />
    <TextView
        android:id="@+id/week_heading"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Week begging"
        android:layout_marginLeft="18dp"
        android:layout_alignTop="@+id/home_button"
        android:layout_toRightOf="@+id/home_button"
        android:layout_marginStart="18dp"
        android:textSize="20sp"/>
    <ImageButton
        android:id="@+id/previous_week_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/next_week_button"
        android:layout_toLeftOf="@+id/next_week_button"
        android:layout_margin="10dp"
        android:text="@string/previous_week_button"
        android:src="@drawable/back_icon"
        android:background="@drawable/rounded_button" />
    <ImageButton
        android:id="@+id/next_week_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="@string/next_week_button"
        android:src="@drawable/next_week_icon"
        android:background="@drawable/rounded_button" />
    <!-- Time table view -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_below="@+id/home_button">
        <HorizontalScrollView
            android:id="@+id/hScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- Time table table -->
            <TableLayout
                android:id="@+id/lecture_timetable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1,2,3,4">
            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>
</RelativeLayout>
